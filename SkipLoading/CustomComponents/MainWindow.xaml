<Window x:Class="CustomComponents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomComponents" xmlns:components="clr-namespace:CustomComponents.Components"
        mc:Ignorable="d"
        Title="Custom Components" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <components:PasswordBoxSL Margin="10" Width="125" Password="{Binding Password}"/>
            <Button x:Name="btnTestBinding" Width="125" Height="25" Content="Test Binding" Command="{Binding TestBinding}"/>
        </StackPanel>
    </Grid>
</Window>
