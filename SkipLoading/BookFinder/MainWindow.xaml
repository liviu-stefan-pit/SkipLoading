<Window x:Class="BookFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="ISBN" Margin="10" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIsbn" Height="25" Width="250" VerticalAlignment="Center" Margin="10" VerticalContentAlignment="Center"/>
            <Button Height="25" Width="120" Content="Search" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
